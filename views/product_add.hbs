<div class="big-container product-manage-wrapper flexed-item">
  <form action="/prod-add" method="POST" class="add-product-form" enctype="multipart/form-data">

    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}

    <h3 class="form-title">Add Sneakers to the collection</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="name" class="label-name label">Model name</label>
      <input name="name" id="sneaker-name" type="text" class="input-text input" placeholder="Nike Air Max 90"
        value="air max 1">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="ref" class="label-ref label">Ref.</label>
      <input name="ref" id="sneaker-ref" type="text" class="input-text input" placeholder="ex: NV23498" value="NV23498">
    </div>

    <div class="form-item-wrapper flexed-item">
      <label for="sizes" class="label-ref label">Available sizes</label>
      <div class="form-item-wrapper-sizes">
        <label for="34" class="label-ref label">34</label>
        <input type="checkbox" name="sizes" id="sizes" class="input-text input" value="34">
        <label for="35" class="label-ref label">35</label>
        <input type="checkbox" name="sizes" id="sizes" class="input-text input" value="35">
        <label for="36" class="label-ref label">36</label>
        <input type="checkbox" name="sizes" id="sizes" class="input-text input" value="36">
        <label for="37" class="label-ref label">37</label>
        <input type="checkbox" name="sizes" id="sizes" class="input-text input" value="37">
        <label for="38" class="label-ref label">38</label>
        <input type="checkbox" name="sizes" id="sizes" class="input-text input" value="38">
        <label for="39" class="label-ref label">39</label>
        <input type="checkbox" name="sizes" id="sizes" class="input-text input" value="39">
        <label for="40" class="label-ref label">40</label>
        <input type="checkbox" name="sizes" id="sizes" class="input-text input" value="40">
        <label for="41" class="label-ref label">41</label>
        <input type="checkbox" name="sizes" id="sizes" class="input-text input" value="41">
        <label for="42" class="label-ref label">42</label>
        <input type="checkbox" name="sizes" id="sizes" class="input-text input" value="42">
        <label for="43" class="label-ref label">43</label>
        <input type="checkbox" name="sizes" id="sizes" class="input-text input" value="43">
        <label for="44" class="label-ref label">44</label>
        <input type="checkbox" name="sizes" id="sizes" class="input-text input" value="44">
      </div>
    </div>

    <div class="form-item-wrapper flexed-item">
      <label for="description" class="label-descr label">Description</label>
      <input name="description" id="sneaker-descr" type="text" class="input-text input"
        placeholder="The better sneakers to run" value="foo bar baz">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="price" class="label-price label">Price</label>
      <input name="price" id="sneaker-price" type="number" class="sneaker-price input" min="1" value="123">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="image" class="label-price label">Image</label>
      <input name="image" id="sneaker-img" type="file" class="sneaker-price input">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="category" class="label-main-cat label">Main category</label>
      <select name="category" id="category" class="select" required>
        <option value="-1" disabled selected>Choose a category</option>
        <option value="men">Men</option>
        <option value="women">Women</option>
        <option value="kids">Kids</option>
      </select>
    </div>

    <div class="form-item-wrapper flexed-item">
      <label for="tags" class="label">Tags</label>
      {{> form_tags_select}}
    </div>
    <button class="button-primary add-sneaker-btn">Add to collection</button>
  </form>

  <div class="add-tag-form">
    <p id="add-tag-message" class="msg"></p>
    <h3 class="form-title">Add tags</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="category-name" class="category-name label">Sneaker tag</label>
      <input id="new_tag_name" type="text" class="input" placeholder="ex: Gangsta">
    </div>
    <button id="btn_new_tag" class="button-primary add-category-btn">Create this category</button>
  </div>
</div>